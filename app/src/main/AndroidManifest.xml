<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.medicalrepresentative">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="23" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.admin.medicalrepresentative.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.admin.medicalrepresentative.Login"
            android:windowSoftInputMode="stateVisible|adjustPan">
        </activity>

        <activity
            android:name="com.example.admin.medicalrepresentative.Signup">
        </activity>

        <activity
            android:name="com.example.admin.medicalrepresentative.Menu">
        </activity>

        <activity
            android:name="com.example.admin.medicalrepresentative.MyList"
            android:windowSoftInputMode="stateVisible|adjustPan">
        </activity>

        <activity
        android:name="com.example.admin.medicalrepresentative.ListViewDemo"
        android:windowSoftInputMode="stateVisible|adjustPan">
        </activity>

    </application>

</manifest>
